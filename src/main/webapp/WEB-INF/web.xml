<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>ShowAllDate</servlet-name>
    <servlet-class>servlets.MainServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ShowAllDate</servlet-name>
    <url-pattern>/table</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>ShowExchangeRateByDate</servlet-name>
    <servlet-class>servlets.DateServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ShowExchangeRateByDate</servlet-name>
    <url-pattern>/exchangeRateByDate</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AvgServlet</servlet-name>
    <servlet-class>servlets.AvgServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AvgServlet</servlet-name>
    <url-pattern>/avg</url-pattern>
  </servlet-mapping>



</web-app>